{
  "name": "@alphahoai/jqnode",
  "version": "1.0.0",
  "description": "A lightweight jQuery-compatible library for DOM manipulation and traversal in both Node.js and browsers",
  "main": "dist/jqnode.cjs.js",
  "module": "dist/jqnode.cjs.js",
  "browser": "dist/jqnode.umd.js",
  "files": [
    "dist/",
    "index.js",
    "browser-entry.js"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "build:node": "rollup -c --environment TARGET:node",
    "build:browser": "rollup -c --environment TARGET:browser",
    "test:browser": "npm run build && echo 'Open browser-test/index.html in your browser to run browser tests'",
    "test:browser:generate": "node scripts/convert-tests-to-browser.js",
    "test:browser:full": "npm run build && npm run test:browser:generate && echo 'Open browser-test/all-tests/index.html in your browser'",
    "test:browser:serve": "npm run test:browser:full && http-server -p 8080 -o browser-test/all-tests/index.html",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:debug": "cross-env JQNODE_DEBUG=1 jest",
    "debug": "cross-env JQNODE_DEBUG=1 node",
    "example": "node examples/basic-usage.js",
    "example:debug": "cross-env JQNODE_DEBUG=1 node examples/basic-usage.js",
    "refactor:scan": "node scripts/refactor-test-expressions.js"
  },
  "keywords": [
    "jquery",
    "dom",
    "query",
    "selector",
    "html",
    "parser",
    "manipulation",
    "traversal",
    "web-scraping",
    "cheerio",
    "jsdom",
    "browser",
    "node"
  ],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/ALPhaHoai/jqnode"
  },
  "homepage": "https://github.com/ALPhaHoai/jqnode#readme",
  "bugs": {
    "url": "https://github.com/ALPhaHoai/jqnode/issues"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "acorn": "^8.15.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "cross-env": "^7.0.3",
    "estraverse": "^5.3.0",
    "http-server": "^14.1.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^29.7.0",
    "jquery": "^3.7.1",
    "jsdom": "^27.0.1",
    "prettier": "^3.6.2",
    "rollup": "^2.79.2",
    "rollup-plugin-terser": "^7.0.2",
    "playwright": "^1.56.1"
  }
}